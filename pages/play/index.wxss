page{
  background: #2D2E33;
  padding-bottom: 100rpx;
}
.title-icon{
  height: 100rpx;
  line-height: 100rpx;
}
.title-icon i-icon{
  margin-right: 20rpx;
}
.title-icon image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  float: right;
}
.video-wrap{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.top-wrap{
  position: relative;
  top: 0;
  z-index: 10;
  width: 100vw;
  height: 30px;
  padding: 17px 0 10px;
  background: #2D2E33;
}
.top-icon{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-left: 55rpx;
}
.top-right-icon{
  position: absolute;
  top: 14rpx;
  right: 40rpx;
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%
}
.share-btn{
  display: inline-block;
  border: none!important;
  padding: 0!important;
  margin: 0;
  margin-left: 55rpx;
  width: 50rpx;
  height: 50rpx;
}
.sharetop-icon{
  vertical-align: top;
  width: 100%;
  height: 100%;
}
.article{
  padding: 24rpx 30rpx;
  font-size: 28rpx;
  color: #AAABAD;
}
.article span{
  font-weight: 600;
  font-size: 32rpx;
}
.list{
  padding: 5rpx 30rpx;
  font-size: 26rpx;
  color: #AAABAD;
}
.common{
  color: #AAABAD;

}
.row-style{
  border-bottom: 1rpx solid #AAABAD;
  padding: 24rpx 0;
}
.img-wrap{
  text-align: center;
}
.del-wrap{
  text-align: center;
}
.common-img{
  width:65rpx;
  height:65rpx;
  border-radius: 50%;
}
.comm-content{
  padding-top: 6rpx;
  font-size: 28rpx;
}
.com{
  margin-bottom: 8rpx;
}
.time{
  color: #777;
}
.comm-name{
  color:#798EBE;
}
.bottom-comment{
  position: fixed;
  bottom: 0;
  width: 100vw;
  font-size: 30rpx;
  border-top: 1rpx solid #262626;
  background: #2D2E33;
}
.bottom-comment input{
  padding: 20rpx 30rpx;
  color: #aaa;
}
.send-btn{
  width: 85%;
  height: 60rpx;
  border-radius: 100rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 17rpx;
  font-size: 28rpx;
  color: #CCAB8C;
  background: #975719;
}
.select-send-btn{
  color: #fff;
  background: #FF7F00;
}

.DetailsMask{width: 100%;height: 100%;background-color: black;background: rgba(0, 0, 0, 0.7);bottom: 0;position: fixed;z-index: 999;}
.sq{
  width:70%;
  background-color:white;
  text-align:center;
  margin:45% auto;
 border-radius:20rpx;
 overflow:hidden;
}
.sq view{
  line-height:200rpx;
  letter-spacing:2rpx;

}
.sq button{
  width:100%;
  float:left;
  border-radius:0!important;
  font-size:28rpx;
  padding-top:10rpx!important;
  padding-bottom:10rpx!important;
  line-height:60rpx;
  border-color:white;
  border-top-color:#ccc;
}
.arrow-icon{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 40%;
  z-index: 999;
}