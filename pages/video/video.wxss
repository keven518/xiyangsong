.videoPage{
  padding: 0 20rpx;
  background:#f5f5f5;
}
.video-group{
  display: flex;
  flex-wrap: wrap;
  margin: 30rpx 0;
  justify-content: space-between;
}
.video-item{
  width: 100%;
  max-height: 600rpx;
  background: #fff;
  margin-bottom: 16rpx;
}
.item{
  position: relative;
}
.play-box{
  width: 80rpx;
  height: 100rpx;
  position: absolute;
  opacity:1;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); 
}
.video-img{
  height: 460rpx;
  width: 100%;
  background: url(http://lizmedia.cn/xyhcms/uploads/img1/20190427/5cc3ca5d82e47.jpg);  
  border-radius: 12rpx 12rpx 0 0;
}
.video-tit{
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 60repx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.video-info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: -webkit-linear-gradient(rgba(0,0,0,0),rgba(0,0,0,.6),rgba(0,0,0,1));
  line-height: 50rpx;
  max-height: 160rpx;
  color: #fff;
  padding: 0 20rpx 10rpx 20rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
  font-size: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.video-dec{
  width: 100%;
  display: block;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 50rpx;
  margin-top: 10rpx; 
}
.userPho{
  border-radius: 50%;
}
.commentImg, .shareImg, .userPho{  
  width: 50rpx;
  height: 50rpx;
}
.userName, .commentNum{
  margin-left: 20rpx;
  height: 50rpx;  
  line-height: 50rpx;
  font-size: 24rpx;
}
.shareaTxt{  
  margin-left: 10rpx;
  height: 50rpx;  
  line-height: 50rpx;
  font-size: 24rpx;
  color:#e52e2d;

}
.comment, .share, .user-info{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  float: left;
  height: 100%;
  display: flex;
  margin-right: 20rpx; 
}
