.image {
  width: 100vw;
  height: 100vh;
}
.articleInfo, text{
  display: block;
  width: 100vw;
  line-height: 60rpx;
  text-align: center;
  clear: both;
}
.articleInfo{
  margin-top: 380rpx;
}
.articleInfo2, .articleInfo3{
  margin-top: 80rpx;
}
.articleInfoTxt{
  color: #fff;
}
.articleInfoTxt2{
  font-size: 28rpx;
  color: #777;
}
.articleInfoTxt3{
  font-size: 28rpx;
  color: #33c1e9;
}
.articleInfoTxt4{
  font-size: 28rpx;
  color: #777;
}
.controls {
  position: fixed;
  height: calc(100vh - 80rpx);
  width: 100vw;
  top: 0;
  left: 0;
}
.container-shirtVideo {
  height: 100vh;
  line-height: 0;
  position: relative;
} 
page {
  height: 100vh;
}
.imageWrap {
  transition: transform 0.5s;
  height: 100%;
}
.leftBox{
  background: #000;
}
.rightBox{
  background: #191925;
}
.imgBox{
  height: 300rpx;
  background: #fff;
}
.imageBox{
  height: 100%;
  width: 100%;
}
.headSculpture{
  height: 100rpx;
  position: relative;
}
.headImg{
  height: 160rpx;
  width: 160rpx;
  background: #090;
  border: 6rpx #000 solid;
  left: 20rpx;
  top: -30rpx;
  position: absolute;
  border-radius: 50%;
  box-sizing: border-box;
}
.focusBtn{
  width: 300rpx;
  height: 80rpx;
  position: absolute;
  right: 40rpx;
  top: 25rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background: #fe2b54;
  border-radius: 10rpx;
}
.userInfo{
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.userTxt{
  line-height: 80rpx;
  padding-left: 20rpx;
  text-align: left;
  font-size: 34rpx;
  color: #fff;
}
.line{
  position: absolute; 
  width: 94%;
  height: 1rpx;
  background: #444;  
  left: 50%;
  transform:translateX(-50%);
  bottom: 0;
}
.headImage{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userDescribe{
  position: relative;
  padding: 20rpx 0;
}
.userDescribeTxt{
  padding-left: 20rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: left;
  color: #fff;
}
.works{
  margin-top: 20rpx;
}
.worksImg {
  width: 33.3333%;
  height: 360rpx;
  background: #090;
  box-sizing: border-box;
  border-left: #191925 1px solid;
  border-bottom: #191925 1px solid;
}